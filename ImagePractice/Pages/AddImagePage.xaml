<Page x:Class="ImagePractice.Pages.AddImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImagePractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddImagePage" Background="White">

    <Grid>
        <StackPanel>
            <TextBox x:Name="tbTitle"></TextBox>
            <TextBox x:Name="tbInfo"></TextBox>
            <Button x:Name="btnSelect" Content="Select" Click="ImageSelectionButtonClick"></Button>
            <Button Content="Save" Click="SaveMaterialClick"></Button>
            <Button Content="Go to gallery" Click="GoToImageGalleryPage"></Button>
        </StackPanel>
    </Grid>
</Page>
